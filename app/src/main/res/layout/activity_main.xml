<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_900"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="10dp"
            android:paddingStart="8dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <com.fintamath.textview.MathEditText
                    android:id="@+id/inText"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    app:hint="Type a math problem..."

                    app:textViewLayout="@layout/math_edit_text"
                    app:fractionLineLayout="@layout/fraction_line" />

            </HorizontalScrollView>

        </androidx.core.widget.NestedScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/md_grey_200_alpha"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:padding="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/outText"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:background="@color/md_grey_900"

                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/md_grey_200" />

            </HorizontalScrollView>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/alternativeFormTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:visibility="gone"
            android:background="@color/md_grey_900"

            android:text="Alternative Form"
            android:textSize="20sp"
            android:textColor="@color/md_grey_200_alpha" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:padding="10dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/outFullText"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:maxLines="1"

                    android:background="@color/md_grey_900"

                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/md_grey_200" />

            </HorizontalScrollView>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/keyboardLayer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/main_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/letters_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/functions_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

    </FrameLayout>

</RelativeLayout>
