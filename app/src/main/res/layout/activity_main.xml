<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bar_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_bar"
            android:textColor="@color/text_main" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="@dimen/diameter_bar_key"
            android:layout_height="@dimen/diameter_bar_key"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bar_key_background"
            android:src="@drawable/ic_camera"
            android:contentDescription="@string/camera_button_description"
            android:onClick="cameraButtonPopup" />

        <ImageButton
            android:layout_width="@dimen/diameter_bar_key"
            android:layout_height="@dimen/diameter_bar_key"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bar_key_background"
            android:src="@drawable/ic_history"
            android:contentDescription="@string/history_button_description"
            android:onClick="historyButtonPopup" />

        <ImageButton
            android:layout_width="@dimen/diameter_bar_key"
            android:layout_height="@dimen/diameter_bar_key"
            android:padding="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bar_key_background"
            android:src="@drawable/ic_overflow_holo"
            android:contentDescription="@string/overflow_button_description"
            android:onClick="showOverflowButtonPopup" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/text_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_above="@id/keyboard_layout"
        android:layout_below="@id/main_bar"
        android:background="@color/background_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <com.fintamath.textview.MathEditText
                    android:id="@+id/inText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:paddingStart="8dp"
                    app:hint="@string/math_edit_text_hint"
                    app:nestedTextViewLayout="@layout/nested_edit_text"
                    app:fractionLineLayout="@layout/fraction_line" />

            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/text_hint"/>

            <com.fintamath.textview.MathAlternativesTextView
                android:id="@+id/outText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                app:alternativeTextViewLayout="@layout/alternative_text_view"
                app:alternativeDelimiterLayout="@layout/alternative_delimiter" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.fintamath.keyboard.KeyboardView
            android:id="@+id/main_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/keyboard_background"
            app:keyboardKeyTextColor="@color/text_keyboard"
            app:keyboardKeyTopLabelTextColor="@color/text_keyboard_top_label"
            app:keyboardKeyBackground="@drawable/key_background"
            app:keyboardKeyPreviewLayout="@layout/key_preview"
            app:keyboardKeyTextSize="@dimen/text_size_keyboard"
            app:keyboardKeyTopLabelTextSize="@dimen/text_size_keyboard_top_label"
            app:popupLayout="@layout/popup_keyboard" />

        <com.fintamath.keyboard.KeyboardView
            android:id="@+id/letters_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/keyboard_background"
            app:keyboardKeyTextColor="@color/text_keyboard"
            app:keyboardKeyTopLabelTextColor="@color/text_keyboard_top_label"
            app:keyboardKeyBackground="@drawable/key_background"
            app:keyboardKeyPreviewLayout="@layout/key_preview"
            app:keyboardKeyTextSize="@dimen/text_size_keyboard"
            app:keyboardKeyTopLabelTextSize="@dimen/text_size_keyboard_top_label"
            app:popupLayout="@layout/popup_keyboard"  />

        <com.fintamath.keyboard.KeyboardView
            android:id="@+id/functions_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/keyboard_background"
            app:keyboardKeyTextColor="@color/text_keyboard"
            app:keyboardKeyTopLabelTextColor="@color/text_keyboard_top_label"
            app:keyboardKeyBackground="@drawable/key_background"
            app:keyboardKeyPreviewLayout="@layout/key_preview"
            app:keyboardKeyTextSize="@dimen/text_size_keyboard"
            app:keyboardKeyTopLabelTextSize="@dimen/text_size_keyboard_top_label"
            app:popupLayout="@layout/popup_keyboard"  />

        <com.fintamath.keyboard.KeyboardView
            android:id="@+id/anaysis_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/keyboard_background"
            app:keyboardKeyTextColor="@color/text_keyboard"
            app:keyboardKeyTopLabelTextColor="@color/text_keyboard_top_label"
            app:keyboardKeyBackground="@drawable/key_background"
            app:keyboardKeyPreviewLayout="@layout/key_preview"
            app:keyboardKeyTextSize="@dimen/text_size_keyboard"
            app:keyboardKeyTopLabelTextSize="@dimen/text_size_keyboard_top_label"
            app:popupLayout="@layout/popup_keyboard"  />

        <com.fintamath.keyboard.KeyboardView
            android:id="@+id/logic_keyboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/keyboard_background"
            app:keyboardKeyTextColor="@color/text_keyboard"
            app:keyboardKeyTopLabelTextColor="@color/text_keyboard_top_label"
            app:keyboardKeyBackground="@drawable/key_background"
            app:keyboardKeyPreviewLayout="@layout/key_preview"
            app:keyboardKeyTextSize="@dimen/text_size_keyboard"
            app:keyboardKeyTopLabelTextSize="@dimen/text_size_keyboard_top_label"
            app:popupLayout="@layout/popup_keyboard"  />

    </FrameLayout>

</RelativeLayout>
