<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_900"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/text_view_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"

        android:layout_alignParentTop="true"
        android:layout_above="@id/keyboard_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:padding="10dp"
                android:paddingStart="8dp"
                android:scrollbars="none">

                <com.fintamath.textview.MathEditText
                    android:id="@+id/inText"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"

                    app:hint="@string/math_edit_text_hint"
                    app:nestedTextViewLayout="@layout/nested_edit_text"
                    app:fractionLineLayout="@layout/fraction_line" />

            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_grey_200_alpha"/>

            <com.fintamath.textview.MathAlternativesTextView
                android:id="@+id/outText"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                app:alternativeLayout="@layout/alternative_layout"
                app:alternativeTextViewLayout="@layout/alternative_text_view"
                app:alternativeDelimiterLayout="@layout/alternative_delimiter" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/keyboard_layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true">

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/main_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"
            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"
            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/letters_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"
            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/functions_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"
            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"
            app:popupLayout="@layout/keyboard_popup" />

    </FrameLayout>

</RelativeLayout>
