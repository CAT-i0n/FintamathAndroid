<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_900"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fintamath.mathtextview.MathEditText
            android:id="@+id/inText"

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="10dp"
            android:paddingStart="8dp"
            android:paddingTop="30dp"

            app:hint="Type a math problem..."

            app:textViewLayout="@layout/math_edit_text"
            app:fractionLineLayout="@layout/fraction_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/md_grey_200_alpha"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/outText"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingTop="30dp"

                android:background="@color/md_grey_900"

                android:text=""
                android:textSize="20sp"
                android:textColor="@color/md_grey_200" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/keyboardLayer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.fintamath.MyKeyboardView
            android:id="@+id/main_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.MyKeyboardView
            android:id="@+id/letters_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.MyKeyboardView
            android:id="@+id/functions_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

    </FrameLayout>

</RelativeLayout>
