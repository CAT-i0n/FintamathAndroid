<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_900"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/input_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/md_grey_200_alpha"/>

        <include layout="@layout/output_text" />

        <TextView
            android:id="@+id/alternativeFormTitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:visibility="gone"
            android:background="@color/md_grey_900"

            android:text="Alternative Form"
            android:textSize="20sp"
            android:textColor="@color/md_grey_200_alpha" />

        <include layout="@layout/output_full_text" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/keyboardLayer"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/main_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/letters_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

        <com.fintamath.keyboard.MyKeyboardView
            android:id="@+id/functions_keyboard_view"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:background="@color/md_grey_900"

            android:keyTextColor="@color/md_grey_200"
            android:keyBackground="@drawable/key_background"
            android:keyPreviewLayout="@layout/key_preview"

            app:popupLayout="@layout/keyboard_popup" />

    </FrameLayout>

</RelativeLayout>
